{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "postgresProductionAdministratorLogin": {
      "type": "string",
      "metadata": {
        "description": "The PostgreSQL database administrator username to use."
      }
    },
    "postgresProductionAdministratorPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The PostgreSQL database administrator password to use. The password must contain character from three of the following categories ? English uppercase letters, English lowercase letters, number (0-9), and non-alphanumeric characters (!, $, #, %)."
      }
    },
    "postgresAlertsAdditionalAdministratorEmails": {
      "type": "string",
      "metadata": {
        "description": "For CPU and Storage usage alerts, add email addresses separated by semicolons"
      },
      "defaultValue": ""
    },
    "appSkuName": {
      "type": "string",
      "defaultValue": "S1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "The Web App Service service plan SKU"
      }
    },
    "appSkuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "metadata": {
        "description": "The Web App Service service plan capacity"
      }
    }
  },
  "variables": {
    "siteNameSafe": "[replace(params('siteName'), '-', '')]",
    "location": "West Europe",
    "persistentResourceGroupName": "[concat(parameters('siteName'), '-persistent-resources')]",

    "productionPostgresServerName": "[concat(parameters('siteName'), '-production-database')]",
    "customEmails": "[split(parameters('postgresAlertsAdditionalAdministratorEmails'), ';')]",
    "databaseName": "[parameters('siteName')"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[variables('location')]",
      "name": "[variables('persistentResourceGroupName')]",
      "properties": {}
    },
    {
      "name": "[concat(variables('siteNameSafe'), 'Registry')]",
      "type": "Microsoft.ContainerRegistry/registries",
      "location": "[variables('location')]",
      "apiVersion": "2017-10-01",
      "sku": {
          "name": "Standard"
      },
      "properties": {
          "adminUserEnabled": false
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "resourcegroupdeployment",
      "resourceGroup": "[variables('persistentResourceGroupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('persistentResourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "type": "Microsoft.DBforPostgreSQL/servers",
              "name": "[variables('productionPostgresServerName')]",
              "apiVersion": "2017-12-01-preview",
              "kind": "",
              "location": "[variables('location')]",
              "properties": {
                "version": "10",
                "administratorLogin": "[parameters('postgresProductionAdministratorLogin')]",
                "administratorLoginPassword": "[parameters('postgresProductionAdministratorPassword')]",
                "storageProfile": {
                  "storageMB": 102400,
                  "backupRetentionDays": "31",
                  "geoRedundantBackup": "Disabled"
                }
              },
              "sku": {
                "name": "GP_Gen5_2",
                "tier": "GeneralPurpose",
                "capacity": 2,
                "size": 102400,
                "family": "Gen5"
              },
              "resources": [
                {
                  "apiVersion": "2017-04-30-preview",
                  "name": "[variables('databaseName')]",
                  "type": "databases",
                  "location": "[variables('location')]",
                  "tags": {
                    "displayName": "PSQLDatabase"
                  },
                  "dependsOn": [
                    "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('productionPostgresServerName'))]"
                  ],
                  "properties": {}
                },
                {
                  "apiVersion": "2017-04-30-preview",
                  "name": "PSQLServerFirewallRule",
                  "type": "firewallrules",
                  "location": "[variables('location')]",
                  "dependsOn": [
                    "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('productionPostgresServerName'))]"
                  ],
                  "properties": {
                    "endIpAddress": "255.255.255.255",
                    "startIpAddress": "0.0.0.0"
                  }
                },
                {
                  "type": "Microsoft.Insights/alertRules",
                  "name": "CPU-Alert",
                  "apiVersion": "2016-03-01",
                  "location": "[variables('location')]",
                  "dependsOn": [
                    "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('productionPostgresServerName'))]"
                  ],
                  "properties": {
                    "name": "CPU-Alert",
                    "description": "Default alert which notify when cpu percent is greater than 80%",
                    "isEnabled": "true",
                    "condition": {
                      "odata.type": "Microsoft.Azure.Management.Insights.Models.ThresholdRuleCondition",
                      "dataSource": {
                        "odata.type": "Microsoft.Azure.Management.Insights.Models.RuleMetricDataSource",
                        "resourceUri": "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('productionPostgresServerName'))]",
                        "metricName": "cpu_percent"
                      },
                      "operator": "GreaterThan",
                      "threshold": "80",
                      "windowSize": "00:05:00",
                      "timeAggregation": "Average"
                    },
                    "actions": [
                      {
                        "odata.type": "Microsoft.Azure.Management.Insights.Models.RuleEmailAction",
                        "sendToServiceOwners": "true",
                        "customEmails": "[variables('customEmails')]"
                      }
                    ]
                  }
                },
                {
                  "type": "Microsoft.Insights/alertRules",
                  "name": "Storage-Alert",
                  "apiVersion": "2016-03-01",
                  "location": "[variables('location')]",
                  "dependsOn": [
                    "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('productionPostgresServerName'))]"
                  ],
                  "properties": {
                    "name": "Storage_Alert",
                    "description": "Default alert which notifies when storage percent is greater than 80%",
                    "isEnabled": "true",
                    "condition": {
                      "odata.type": "Microsoft.Azure.Management.Insights.Models.ThresholdRuleCondition",
                      "dataSource": {
                        "odata.type": "Microsoft.Azure.Management.Insights.Models.RuleMetricDataSource",
                        "resourceUri": "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('productionPostgresServerName'))]",
                        "metricName": "storage_percent"
                      },
                      "operator": "GreaterThan",
                      "threshold": "80",
                      "windowSize": "00:05:00",
                      "timeAggregation": "Average"
                    },
                    "actions": [
                      {
                        "odata.type": "Microsoft.Azure.Management.Insights.Models.RuleEmailAction",
                        "sendToServiceOwners": "true",
                        "customEmails": "[variables('customEmails')]"
                      }
                    ]
                  }

                }
              ]
            },
            {
              "apiVersion": "2016-09-01",
              "name": "[parameters('siteName')]",
              "type": "Microsoft.Web/serverfarms",
              "location": "[variables('location')]",
              "sku": {
                "name": "[parameters('appSkuName')]",
                "capacity": "[parameters('appSkuCapacity')]"
              },
              "properties": {
                "name": "[parameters('siteName')]"
              }
            },
            {
              "apiVersion": "2016-08-01",
              "name": "[parameters('siteName')]",
              "kind": "app",
              "type": "Microsoft.Web/sites",
              "location": "[variables('location')]",
              "properties": {
                "name": "[parameters('siteName')]",
                "serverFarmId": "[parameters('siteName')]"
              },
              "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('siteName'))]",
                "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('productionPostgresServerName'))]"
              ]
            }
          ]
        }
      }
    }
  ]
}